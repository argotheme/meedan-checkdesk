; BASIC SETTINGS
name = Checkdesk
description = Checkdesk theme based on the Bowerbird theme.
core = 7.x
engine = phptemplate
;base theme = bowerbird


; CSS
; HTML 5 Boilerplate
stylesheets[all][] = assets/css/libs/normalize.css
stylesheets[all][] = assets/css/libs/main.css
; Checkdesk styles
stylesheets[all][] = assets/css/style.css

; JAVASCRIPT
scripts[] = assets/js/libs/modernizr-2.6.1.min.js
scripts[] = assets/js/libs/bootstrap-alert.js
scripts[] = assets/js/libs/bootstrap-dropdown.js
scripts[] = assets/js/libs/bootstrap-modal.js
scripts[] = assets/js/report.js

; REGIONS
regions[page_top] = Page top
regions[header] = Header
regions[highlight] = Highlight
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First sidebar
regions[sidebar_second] = Second sidebar
regions[footer] = Footer
regions[page_bottom] = Page bottom
regions[navigation] = Navigation bar

; EXCLUDE CSS
exclude[css][] = 'sites/all/modules/contrib/*'
exclude[css][] = 'misc/*'
exclude[css][] = 'modules/*'
